 <div> Olá, <%= @user.username %> </div> 
  <h3>Accounts</h3>
  <ul>
    <%@user.accounts.each do |account|%>
      <li><%= link_to account.bank.name, user_account_path(@user.id, account) %>
      <%=" balance: #{number_to_currency(account.balance)}" %></li>
    <% end %>
  </ul>

  <%= button_to "Criar nova conta", new_user_account_path(params[:id]), method: :get %> 
  <%= button_to "Editar usuário", edit_user_path(@user.id), method: :get %>
  <%= button_to "Log out", logout_path, method: :get %>
  <%= button_to "Home", users_path, method: :get %>
